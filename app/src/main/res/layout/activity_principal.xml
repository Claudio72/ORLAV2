<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_principal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.usuario.layouts.Principal">


    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="508dp"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintGuide_percent="0.8959436" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline2"
        app:layout_constraintGuide_percent="0.5"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="192dp" />

    <TextView
        android:text="Orla"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/btnOrla"
        app:layout_constraintRight_toLeftOf="@+id/guideline2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="1.0"
        tools:gravity="center"
        android:gravity="center" />

    <View
        android:layout_height="1dp"
        tools:layout_editor_absoluteX="8dp"
        android:layout_width="368dp"
        android:background="@android:color/background_dark"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:text="Codigo QR"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/btnQr"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:text="TextView"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="90dp"
        tools:layout_editor_absoluteX="53dp"
        android:id="@+id/textView" />
</android.support.constraint.ConstraintLayout>
